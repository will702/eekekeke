
<TooltipMDIconButton@MDIconButton+MDTooltip>
#:import rgba kivy.utils.get_color_from_hex

#:import Window kivy.core.window.Window
#:import hex kivy.utils.get_color_from_hex

#:import Window kivy.core.window.Window

<BackgroundLayer@BoxLayout>:
    orientation:'vertical'
    BoxLayout:
        orientation:'vertical'
        canvas.before:
            Color:
                rgba:rgba("#289fbd")
            RoundedRectangle:
                pos:self.pos
                size:self.size
                radius:[0,0,40,40]
    BoxLayout:
        orientation:'horizontal'

<MyLayout>
    orientation: 'vertical'
    size: root.width, root.height
    ScreenManager:
        id:screen_manager
        MDScreen:

            name:"mainscreen"
            BackgroundLayer


            MDBoxLayout:
                pos_hint_x:1

                pos_hint:{'center_x':0.5,'center_y':0.649}
                size_hint_y:0.7
                AndroidCamera:
                    id:camera
                    #Choosing Default Camera Index
                    index: 0
                    resolution: self.camera_resolution
                    allow_stretch: True
                    play: True


            MDBoxLayout:
                pos_hint:{"center_x":0.5,'center_y':0.11}

                MDLabel:
                    id:label

                    halign:"center"
                    text:""
                    bold:True
                    font_style:"Button"

            TooltipMDIconButton:
                tooltip_text:"See Logs"
                icon: 'img/arrow-right.png'
                on_release:
                    app.go_friend()

                pos_hint:{'center_x':0.9,'center_y':0.05}


            TooltipMDIconButton:
                tooltip_text:"Reset"
                icon: 'img/reset.png'
                on_release:
                    app.reset()

                pos_hint:{'center_x':0.1,'center_y':0.05}

            MDCard:
                size_hint_y:0.1
                size_hint_x:1
                radius: [15]
                elevation:20
                md_bg_color:rgba('#000000')
                pos_hint:{'center_y':0.25,'center_x':0.5}

            TooltipMDIconButton:

                tooltip_text:'Detect'
                icon:'img/camera_icon.png'

                pos_hint:{'center_x':0.5,'center_y':0.248}

                on_release:
                    app.activate()


            TooltipMDIconButton:
                tooltip_text:'Swap'
                icon:'img/rotate.png'
                pos_hint:{'center_x':0.9,'center_y':0.248}

                on_release:
                    app.swap()





        MDScreen:
            name:"log_list"





            BoxLayout:
                orientation:'vertical'

                ScrollView:

                    do_scroll_x: False
                    height: Window.height
                    MDList:
                        id: container
            TooltipMDIconButton:
                tooltip_text:"Back"
                icon: 'img/arrow-left.png'
                on_release:
                    app.go_back()

                pos_hint:{'center_x':0.9,'center_y':0.05}











